<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View style="@style/div_hor_gray"/>

    <LinearLayout
        android:background="@color/white_hi"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <LinearLayout
            android:id="@+id/ll_tab_check"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_check"
                android:background="@mipmap/ic_check_sel"
                android:layout_width="21dp"
                android:layout_height="21dp"/>

            <TextView
                android:id="@+id/tv_tab_check"
                style="@style/font_main_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入园验证"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_query"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_query"
                android:background="@mipmap/ic_view_nor"
                android:layout_width="21dp"
                android:layout_height="21dp"/>

            <TextView
                android:id="@+id/tv_tab_query"
                style="@style/font_9_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据查询"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tab_mine"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_tab_mine"
                android:background="@mipmap/ic_mine_nor"
                android:layout_width="21dp"
                android:layout_height="21dp"/>

            <TextView
                android:id="@+id/tv_tab_mine"
                style="@style/font_9_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户中心"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>